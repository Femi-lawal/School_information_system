<% include partials/header %>
<h1>Welcome to a simple School Information System<h1>
       <h2>Add Students</h2>
       <% if(errors){  %>
            <ul>
            <% errors.forEach(function(error){%>
            <li><%= error.msg %></li>
             <% }) %>
             </ul>
       <% } %>
       <form method="POST" action="/users/add">
            <label>First Name</label><br>
            <input type="text" name="first_name">
            <br>
            <label>Last Name</label><br>
            <input type="text" name="last_name">
            <br>
            <label>Matric Number</label><br>
            <input type="text" name="matric_number">
            <br>
            <label>level</label><br>
            <input type="text" name="level">
            <br>
            <label>Email</label><br>
            <input type="text" name="email">
            <br>
            <label>Address</label><br>
            <input type="text" name="address">
            <br>
            <label>Phone number</label><br>
            <input type="text" name="phone_number">
            <br>
            <label>Courses offered</label><br>
            <input type="text" name="courses_offered">
            <br><br>
            <input type="submit" value="submit">
        </form>
       <h2><%=title%></h2>
       <ul>
       <% users.forEach(function(users){%>
         <li><%=users.first_name%> <%=users.
         last_name%>  -<a href="#" 
      class="deleteUser" data-id="<%= users._id
      %>"> Delete</a> -<a href="#" 
      class="findModifyUser" data-id="<%= users._id
      %>"> Edit</a></li>
      <% }) %>
      </ul>
